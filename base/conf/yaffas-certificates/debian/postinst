#!/bin/bash
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

source /opt/yaffas/lib/bbinstall-lib.sh

case "$1" in
    configure)

	if [ -z "$2" ]; then
		# Linking certs
		CERTDIR="/opt/yaffas/etc/ssl/certs/"

        YAFFAS_EXAMPLE="/opt/yaffas/share/doc/example"
        mkdir -p /opt/yaffas/etc/ssl/certs/org/
        cp -f ${YAFFAS_EXAMPLE}/etc/ssl/certs/org/default.* /opt/yaffas/etc/ssl/certs/org/

		CERTS="postfix exim webmin cyrus usermin ldap zarafa-webaccess zarafa-server zarafa-gateway zarafa-ical mppmanager cups"

		for i in $CERTS; do
			ln -sf $CERTDIR/org/default.key  $CERTDIR/$i.key
			ln -sf $CERTDIR/org/default.crt  $CERTDIR/$i.crt
			cat $CERTDIR/org/default.crt $CERTDIR/org/default.key > $CERTDIR/$i
		done

		# Webmin config
		PRODUCTS="webmin usermin"
		for PRODUCT in $PRODUCTS; do

			CONF="/opt/yaffas/etc/$PRODUCT/miniserv.conf"
			TMPCONF="/tmp/miniserv.conf"

			if [ -r $CONF ]; then
				echo "Editing $PRODUCT"

				KC="key cert"
				for BBKC in $KC; do
					if [ "$BBKC" = "cert" ]; then
						FILEEXTENSION="crt";
					else
						FILEEXTENSION="key";
					fi
					if grep -q "^${BBKC}file" $CONF; then
						sed -e "s/^${BBKC}file=.*/${BBKC}file=\/opt\/yaffas\/etc\/ssl\/certs\/$PRODUCT.${FILEEXTENSION}/" $CONF  > $TMPCONF
						rm -f $CONF
						mv -f $TMPCONF $CONF
						chmod 600 $CONF
					else
						echo "${BBKC}file=/opt/yaffas/etc/ssl/certs/$PRODUCT.${FILEEXTENSION}" >> $CONF
					fi
				done
			fi
		done
	fi
    
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


